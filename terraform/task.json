[
    {
        "name": "backend-app-${env}", 
        "image": "324139215624.dkr.ecr.us-east-1.amazonaws.com/giveandtake-${env}:latest", 
        "portMappings": [
            {
                "containerPort": 443, 
                "hostPort": 443, 
                "protocol": "tcp"
            }
        ], 
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "backend-logs-${env}",
                "awslogs-region": "us-east-1",
                "awslogs-stream-prefix": "backend"
            }
        },
        "environment" : [
	    { "name" : "AWS_ACCESS_KEY_ID", "value" : "${access_id}" },
	    { "name" : "AWS_SECRET_ACCESS_KEY", "value" : "${secret_key}" },
	    { "name" : "AWS_DEFAULT_REGION", "value" : "us-east-1" }
	],
        "essential": true
    }
] 
